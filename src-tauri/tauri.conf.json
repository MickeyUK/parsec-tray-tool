{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Parsec Tray Tool",
    "version": "1.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": ""
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://*.parsec.app/*",
          "http://127.0.0.1:5001/*",
        ]
      },
      "fs": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "process": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.mickeyuk.parsectraytool",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/32x32.png"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "title": "Parsec Tray Tool",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "transparent": false,
        "decorations": true
      }
    ]
  }
}
